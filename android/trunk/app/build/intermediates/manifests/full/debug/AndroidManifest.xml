<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="urbanstew.RehearsalAssistant"
    android:versionCode="26"
    android:versionName="0.9" >

    <uses-sdk
        android:minSdkVersion="3"
        android:targetSdkVersion="3" />

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowClearUserData="true"
        android:debuggable="false"
        android:icon="@drawable/icon"
        android:label="Rehearsal Assistant" >
        <activity
            android:name="urbanstew.RehearsalAssistant.RehearsalAssistant"
            android:label="Rehearsal Assistant" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="urbanstew.RehearsalAssistant.RehearsalData"
            android:authorities="com.urbanstew.provider.RehearsalAssistant" />

        <activity
            android:name="urbanstew.RehearsalAssistant.ProjectOpener"
            android:allowTaskReparenting="true"
            android:launchMode="singleTask" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="vnd.android.cursor.item/vnd.urbanstew.project" />
            </intent-filter>
            <intent-filter>
                <action android:name="urbanstew.RehearsalAssistant.simple_mode" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="urbanstew.RehearsalAssistant.SimpleProject"
            android:allowTaskReparenting="true"
            android:configChanges="keyboardHidden|orientation"
            android:launchMode="singleTask" />
        <activity
            android:name="urbanstew.RehearsalAssistant.SessionProject"
            android:launchMode="singleTask" />
        <activity
            android:name="urbanstew.RehearsalAssistant.RehearsalPlayback"
            android:configChanges="keyboardHidden|orientation" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="vnd.android.cursor.item/vnd.urbanstew.session" />
            </intent-filter>
        </activity>
        <activity
            android:name="urbanstew.RehearsalAssistant.RehearsalRecord"
            android:configChanges="keyboardHidden|orientation" >
            <intent-filter>
                <action android:name="android.intent.action.EDIT" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="vnd.android.cursor.item/vnd.urbanstew.session" />
            </intent-filter>
        </activity>
        <activity android:name="urbanstew.RehearsalAssistant.NewRun" >
            <intent-filter>
                <data android:mimeType="vnd.android.cursor.dir/vnd.urbanstew.session" />

                <action android:name="android.intent.action.INSERT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="urbanstew.RehearsalAssistant.SettingsActivity" />

        <service android:name="urbanstew.RehearsalAssistant.RecordService" >
            <intent-filter>
                <action android:name="urbanstew.RehearsalAssistant.record" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <intent-filter>

                <!--
                     These are the interfaces supported by the service, which
                     you can bind to.
                -->
                <action android:name="urbanstew.RehearsalAssistant.IRecordService" />
            </intent-filter>
        </service>

        <activity
            android:name="urbanstew.RehearsalAssistant.ProjectManager"
            android:launchMode="singleTask" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="vnd.android.cursor.dir/vnd.urbanstew.project" />
            </intent-filter>
        </activity>
        <activity
            android:name="urbanstew.RehearsalAssistant.ImportDirectoryActivity"
            android:label="Import Directory" >
            <intent-filter>
                <action android:name="org.urbanstew.rehearsalassistant.IMPORT_DIRECTORY" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="*/*" />
            </intent-filter>
        </activity>
    </application>

</manifest>